<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mensaje_recivido_redondeado"
    android:orientation="vertical"
    android:paddingHorizontal="6dp"
    android:paddingVertical="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nombre_mensaje1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nombre Apellido1 Apellido2"
            android:textColor="@color/colorBoton"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fecha_mensaje1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text="11:30 11/05/2020"
            android:textColor="@color/negro"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/contenido_mensaje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="texto del mensaje"
        android:textColor="@color/grisoscuro"
        android:textSize="16dp" />
</LinearLayout>